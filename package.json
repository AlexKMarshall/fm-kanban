{
  "name": "fm-kanban",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "husky": "9.0.11",
    "lint-staged": "15.2.2"
  },
  "engines": {
    "node": "21.7.1"
  },
  "lint-staged": {
    "**/!(*$*).{cjs,mjs,js,jsx,ts,tsx}": [
      "turbo lint -- --fix",
      "turbo format -- --write"
    ]
  }
}
