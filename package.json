{
  "name": "fm-kanban",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . --max-warnings $( [[ -z ${CI} ]] && echo 999 || echo 0 )",
    "echo": "echo ${CI:-20}",
    "format": "prettier --ignore-path .gitignore \"**/*.{cjs,mjs,js,jsx,ts,tsx,json,md}\" --check",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "knip": "knip",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:studio": "prisma studio",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui"
  },
  "dependencies": {
    "@conform-to/react": "1.0.5",
    "@conform-to/zod": "1.0.5",
    "@prisma/client": "5.11.0",
    "@radix-ui/react-icons": "1.3.0",
    "@remix-run/node": "2.8.1",
    "@remix-run/react": "2.8.1",
    "@remix-run/serve": "2.8.1",
    "isbot": "5.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-variants": "0.2.1",
    "tiny-invariant": "1.3.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@playwright/test": "1.42.1",
    "@remix-run/dev": "2.8.1",
    "@tailwindcss/forms": "0.5.7",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "20.11.30",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@types/set-cookie-parser": "2.4.7",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "9.0.11",
    "knip": "5.2.2",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.12",
    "prisma": "5.11.0",
    "set-cookie-parser": "2.6.0",
    "tailwindcss": "3.4.1",
    "turbo": "1.13.0",
    "type-fest": "4.13.1",
    "typescript": "5.4.3",
    "vite": "5.2.2",
    "vite-tsconfig-paths": "4.3.2"
  },
  "engines": {
    "node": "21.7.1"
  },
  "lint-staged": {
    "**/!(*$*).{cjs,mjs,js,jsx,ts,tsx}": [
      "turbo lint -- --fix",
      "turbo format -- --write"
    ]
  }
}
